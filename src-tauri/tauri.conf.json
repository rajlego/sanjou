{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sanjou",
  "version": "0.1.0",
  "identifier": "com.sanjou.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sanjou",
        "width": 380,
        "height": 600,
        "minWidth": 320,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["sanjou"]
      }
    }
  }
}
